<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="teal_color_textview_style">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/teal_200</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <!-- teal_color_textview_style을 상속받은 style. textColor만 black으로 바꿈  -->
    <style name="black_color_textview_style" parent="teal_color_textview_style">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>