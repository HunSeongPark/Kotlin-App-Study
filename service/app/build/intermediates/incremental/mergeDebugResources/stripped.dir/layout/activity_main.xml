<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/start_service"
        android:text="start service"
        />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/start_service"
        android:id="@+id/stop_service"
        android:text="stop service"
        />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stop_service"
        android:id="@+id/start_foreground_service"
        android:text="start foreground service"
        app:backgroundTint="@color/teal_700"
        />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/start_foreground_service"
        android:id="@+id/stop_foreground_service"
        android:text="stop foreground service"
        app:backgroundTint="@color/teal_700"
        />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stop_foreground_service"
        android:id="@+id/bind_binder_service"
        android:text="bind extended service"
        app:backgroundTint="@color/design_default_color_error"
        />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bind_binder_service"
        android:id="@+id/unbind_binder_service"
        android:text="unbind extended service"
        app:backgroundTint="@color/design_default_color_error"
        />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/unbind_binder_service"
        android:id="@+id/show_toast_binder"
        android:text="show toast with binder extended"
        app:backgroundTint="@color/design_default_color_error"
        />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/show_toast_binder"
        android:id="@+id/bind_ipc_service"
        android:text="bind messenger ipc service"
        app:backgroundTint="@color/black"
        />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bind_ipc_service"
        android:id="@+id/unbind_ipc_service"
        android:text="unbind messenger ipc service"
        app:backgroundTint="@color/black"
        />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/unbind_ipc_service"
        android:id="@+id/show_toast_ipc"
        android:text="show toast with ipc service"
        app:backgroundTint="@color/black"
        />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/show_toast_ipc"
        android:id="@+id/add_function_ipc"
        android:text="invoke add function in ipc service"
        app:backgroundTint="@color/black"
        />

</androidx.constraintlayout.widget.ConstraintLayout>